---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Main from "@layouts/Main.astro";
import Footer from "@components/Footer.astro";
import CardGrid from "../../components/CardGrid.astro";
import {
  formatter,
  getEventDetails,
  getFoodItems,
  getLists,
  getUniqueNeighborhoods,
} from "@utils/collections";

const { year } = Astro.params;

const wings = await getFoodItems(year!, "wing");
const neighborhoods = wings ? getUniqueNeighborhoods(wings) : [];
const lists = await getLists(Astro.locals?.user?.id);
const eventDetails = await getEventDetails(year!, "wing");

const dateRange = eventDetails
  ? `${formatter.format(new Date(eventDetails.dateStart))} - ${formatter.format(new Date(eventDetails.dateEnd))} ${eventDetails.year}`
  : undefined;
---

<Layout
  title={`PDX Wing Week ${year}`}
  description="A fan site celebrating PDX Wing Week"
>
  <Header />
  <Main
    pageTitle={`Wing ${year}`}
    neighborhoods={neighborhoods}
    pageDesc={dateRange}
  >
    {wings && <CardGrid items={wings} lists={lists} />}
  </Main>
  <Footer />
</Layout>
