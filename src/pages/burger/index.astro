---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Main from "@layouts/Main.astro";
import Footer from "@components/Footer.astro";
import { getCollection } from "astro:content";

const burgerCollections = await getCollection("burgers");
const years = burgerCollections.map(
  burgerCollection => burgerCollection.id + ""
);
---

<Layout
  title={`PDX Burger Week`}
  description="A fan site celebrating PDX Burger Week"
>
  <Header />
  <Main pageTitle={`Burgers`}>
    <div class="flex w-full h-full justify-center items-center flex-col">
      <div class="flex flex-col gap-8">
        {
          years.map(year => (
            <a class="text-3xl text-accent" href={`/burger/${year}`}>
              {year}
            </a>
          ))
        }
      </div>
    </div>
  </Main>
  <Footer />
</Layout>
